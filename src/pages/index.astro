---
import Layout from "../layouts/Layout.astro";
import { Icon } from 'astro-icon/components';
---

<Layout title="Crummy Website">
	<div class="flex flex-col min-h-screen">


	<main class="flex-grow">

		<div class="hero mt-12 lg:mt-52">
		  <div class="hero-content flex-col lg:flex-row">
			<div class="avatar">
			  <div class="w-60 rounded">
				<img src="/me.jpg" />
			  </div>
			</div>
			<div>
			  <h1 class="text-center lg:text-left text-5xl font-bold">William Crum</h1>
			  <div class="text-center lg:text-left space-x-3 py-1">
				<div class="badge badge-outline">Developer</div>
				<div class="badge badge-outline">Mountaineer</div>
				<div class="badge badge-outline">Marine</div>
			  </div>
			  <p class="text-center lg:text-left max-w-xl py-4">
				Passionate individiual with demonstrated experience of Software Development and Machine Learning at the tactical edge in the Department of Defense.
			  </p>
			  <div class="flex justify-center lg:justify-start space-x-3">
				<a href="https://github.com/wcrum"><Icon class="text-[52px]" name="mdi:github" /></a>
				<a href="https://www.linkedin.com/in/william-crum-usmc/"><Icon class="text-[52px]" name="mdi:linkedin" /></a>
			  </div>
			</div>
		  </div>
		</div>
	</main>
  <footer class="sticky bottom-0 m-5">
    <div class="flex items-center justify-between">
      <div>
        <a href="mailto:will@wcrum.dev"><h2 class="font-semibold">Contact Me</h2></a>
      </div>
      <div>
		<a href="https://github.com/sponsors/wcrum">
			<Icon class="text-[52px] mb-5" name="line-md:coffee-loop" />
		</a>
      </div>
    </div>
  </footer>
  </div>
</Layout>
